@{
    ViewBag.Title = "Quản lý danh mục";
}

<div class="row">   
    <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">Quản lý danh mục</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    @*<a href="#" data-toggle="dispose">
                            <i class="fa fa-times"></i>
                        </a>*@
                </div>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <form class="form-inline" role="form">
                        <div class="form-group">
                            <select id="sltCategory" class="form-control" style="border-radius: 0; min-width: 150px;">
                                <option value="0">Danh mục</option>
                            </select>
                        </div><br />
                        <div class="form-group">
                            <input type="text" class="form-control input-sm" id="txtNameCategory" placeholder="Tên danh mục" style="min-width: 350px;">
                        </div>
                        <div class="form-group">
                            <a id="btnAddNewCategory" class="btn btn-info"><i class="fa fa-plus"></i> Thêm</a>
                        </div>
                    </form>
                </div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr role="row">
                            <th style="width:10%">
                                Id
                            </th>
                            <th>
                                Tên danh mục
                            </th>
                            <th style="width:20%">

                            </th>
                        </tr>
                    </thead>
                    <tbody id="listAllCategory">
                        @*<tr>
                                <td>1</td>
                                <td>Dành cho bé</td>
                                <td>
                                    <a href="#" class="btn btn-info btn-xs edit"><i class="fa fa-edit"></i> Edit</a>
                                    <a href="#" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> Delete</a>
                                </td>
                            </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
</div>
