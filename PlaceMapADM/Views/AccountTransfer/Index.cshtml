@{
    ViewBag.Title = "Điều chuyển tài khoản";
}

<div class="row">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-themeprimary">
            <i class="widget-icon fa fa-tasks themeprimary"></i>
            <span class="widget-caption themeprimary">Điều chuyển tài khoản</span>
            <div class="widget-buttons">                
                <a href="javascript:void(0);" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                <a class="sidebar-toggler" href="javascript:void(0);">
                    <i class="fa fa-arrows-h"></i>
                </a>
                <a href="javascript:void(0);" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
            </div>
        </div>
        <div id="widget-body-map" class="widget-body no-padding">
            <div class="task-container">
                <div class="col-lg-5 col-sm-5 col-xs-5" style="padding: 0; padding-right: 5px;">
                    <div class="form-group">
                        <span class="badge badge-azure graded">A</span>
                        <select id="sltAccountA" name="sltAccountA" style="border-radius: 0; width: 50%">
                            <option value="0">---Chọn tài khoản---</option>
                            <script id="data-list-account" type="x-tmpl-mustache">
                                <option value="{{id}}">{{displayName}}</option>
                            </script>
                        </select>                        
                        <span class="input-icon icon-right" style="width: 45%;">
                            <input type="text" id="txtSearch" name="txtSearch" class="form-control" placeholder="Tìm kiếm...">
                            <i class="glyphicon glyphicon-search circular"></i>
                        </span>                        
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                        <tr role="row">
                            <th style="width: 6%">
                                Stt
                            </th>
                            <th style="width: 10%">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="cbxSelectedAllA" name="cbxSelected" class="colored-blue cbxSelectedAllA">
                                        <span class="text"></span>
                                    </label>
                                </div>
                            </th>
                            <th style="width:10%">
                                Ảnh
                            </th>
                            <th>
                                Tên
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                        </thead>
                        <tbody id="listAllLocaltionA"></tbody>
                        <script id="package-data-localtion-a" type="x-tmpl-mustache">
                            <tr>
                                <td>
                                    {{stt}}
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="cbxSelected" class="colored-blue cbxSelectedA" data-id="{{id}}" />
                                            <span class="text"></span>
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <img src='{{avatar}}' width="32" />
                                </td>
                                <td>
                                    {{name}}
                                    <br />
                                    <span style="font-size:12px;font-style:italic">Đ/c: {{address}}</span>
                                </td>
                                <td style="text-align:center;width:22%;">
                                    <a href="javascript:void(0)" class="btn btn-info btn-xs viewdetail" data-id="{{id}}"><i class="fa fa-eye"></i> Xem</a>
                                </td>
                            </tr>
                        </script>
                    </table>
                    <div class="DTTTFooter">
                        <div class="col-sm-12">
                            <div class="dataTables_paginate paging_bootstrap hide" id="pagerLocaltionA">
                                <ul class="pagination">
                                    <li class="prev disabled btnPreviousLocaltionA"><a id="btnPreviousLocaltionA" href="javascript:void(0)">Prev</a></li>
                                    <li class="next btnNextLocaltionA"><a href="javascript:void(0)" id="btnNextLocaltionA">Next</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-sm-2 col-xs-2 text-align-center">
                    <p style="margin-bottom: 100px;padding-top: 10px">Điểu chuyển A <i class="fa fa-long-arrow-right right"> B</i></p>
                    @*<button class="btn btn-blue form-control" value=""><< Chuyển đã chọn</button>
                    <p style="margin-bottom: 10px;"></p>
                    <button class="btn btn-blue form-control" value=""><< Chuyển tất cả</button>
                    <hr/>*@
                    <a id="btnUpdateLocaltionByUser" class="btn btn-info">Chuyển đã chọn sang <i class="fa fa-long-arrow-right right"></i></a>
                    <p style="margin-bottom: 10px;"></p>
                    <a id="btnUpdateLocaltionByAll" class="btn btn-info">Chuyển tất cả sang <i class="fa fa-long-arrow-right right"></i></a>
                </div>

                <div class="col-lg-5 col-sm-5 col-xs-5" style="padding: 0;">
                    <div class="form-group text-align-center">
                        <span class="badge badge-azure graded">B</span>
                        <select id="sltAccountB" name="sltAccountB" style="border-radius: 0; width: 50%">
                            <option value="0">---Chọn tài khoản---</option>
                        </select>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr role="row">
                                <th style="width: 6%">
                                    Stt
                                </th>
                                <th style="width: 10%">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="cbxSelectedAllB" name="cbxSelected" class="colored-blue cbxSelectedAllB" disabled>
                                            <span class="text"></span>
                                        </label>
                                    </div>
                                </th>
                                <th>
                                    Ảnh
                                </th>
                                <th>
                                    Tên
                                </th>                                
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody id="listAllLocaltionB"></tbody>
                        <script id="package-data-localtion-b" type="x-tmpl-mustache">
                            <tr>
                                <td>
                                    {{stt}}
                                </td>
                                <td>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="cbxSelected" class="colored-blue cbxSelectedB" data-id="{{id}}" disabled>
                                            <span class="text"></span>
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <img src='{{avatar}}' width="32" />
                                </td>
                                <td>
                                    {{name}}
                                    <br />
                                    <span style="font-size:12px;font-style:italic">Đ/c: {{address}}</span>
                                </td>                                                                                                            
                                <td style="text-align:center;width:22%;">
                                    <a href="javascript:void(0)" class="btn btn-info btn-xs viewdetail" data-id="{{id}}"><i class="fa fa-eye"></i> Xem</a>                                        
                                </td>
                            </tr>
                        </script>
                    </table>
                    <div class="DTTTFooter">
                        <div class="col-sm-12">
                            <div class="dataTables_paginate paging_bootstrap hide" id="pagerLocaltionB">
                                <ul class="pagination">
                                    <li class="prev disabled btnPreviousLocaltionB"><a id="btnPreviousLocaltionB" href="javascript:void(0)">Prev</a></li>
                                    <li class="next btnNextLocaltionB"><a href="javascript:void(0)" id="btnNextLocaltionB">Next</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>                    
                </div>                
            </div>
        </div>
    </div>    
</div>
<div id="myModalLocaltionDetail" class="modal fade" role="dialog" style="display:none;">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chi tiết địa chỉ này</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover table-bordered">
                    <tbody id="viewDetailLocaltion"></tbody>
                    <script id="package-data-viewDetailLocaltion" type="x-tmpl-mustache">
                        <tr>
                            <td style="width:25%">Trạng thái: </td>
                            <td>
                                <input readonly class="colored-success" type="checkbox" {{isChecked}}>
                                <span class="text">{{isCheckedName}}</span>
                                <a href="/AccountChecked/?accountId={{accountId}}" class="btn btn-default btn-xs" style="float:right;"><i class="fa fa-map-marker"></i> Lịch sử checkin</a>
                            </td>
                        </tr>
                        <tr>
                            <td>Tên: </td>
                            <td>{{name}}</td>                                                                              
                        </tr>
                        <tr>
                            <td>Địa chỉ: </td>
                            <td>{{address}}</td>
                        </tr>
                        <tr>
                            <td>Ảnh: </td>
                            <td><img src='{{avatar}}' width="64" /></td>
                        </tr>
                        <tr>
                            <td>Kinh, Vĩ độ: </td>
                            <td>{{lag}}, {{lng}}</td>
                        </tr>
                        <tr>
                            <td>Phone: </td>
                            <td>{{phone}}</td>
                        </tr>
                        <tr>
                            <td>Email: </td>
                            <td>{{email}}</td>
                        </tr>
                        <tr>
                            <td>Loại khách hàng: </td>
                            <td>{{customeType}}</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <a href="/?accountId={{accountId}}&lag={{lag}}&lng={{lng}}" class="btn btn-primary btn-xs"><i class="fa fa-map-marker"></i>View Map</a>
                            </td>
                        </tr>
                    </script>
                </table>                
            </div>            
        </div>
    </div>

</div>
@section PageScripts {
    @Scripts.Render("~/bundles/select2")
}
