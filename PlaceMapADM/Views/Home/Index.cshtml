<style>
    #maps {
        height: 100%;
        min-height: 600px;
      }
    #panorama {
        height: 100%;
        min-height: 600px;
      }
</style>

<div class="row">
    <div class="col-lg-4 col-sm-12 col-xs-12" style="padding: 0; padding-right: 5px;">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-themeprimary">
                <i class="widget-icon fa fa-tasks themeprimary"></i>
                <span class="widget-caption themeprimary">Chọn tài khoản</span>
                <div class="widget-buttons">
                    <a href="javascript:void(0);" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
            </div>
            <div id="widget-body-user" class="widget-body no-padding">
                <div class="task-container">
                    <span class="input-icon icon-right">
                        <input type="text" id="txtSearch" name="txtSearch" class="form-control" placeholder="Tìm kiếm..." />
                        <i class="glyphicon glyphicon-search circular"></i>
                    </span>
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th id="nameid">
                                Tên
                            </th>
                        </tr>
                        </thead>
                        <tbody id="listAllAccount"></tbody>
                        <script id="package-data" type="x-tmpl-mustache">
                            <tr data-id='{{id}}'>
                                <td>
                                    {{stt}}
                                </td>
                                <td>
                                    {{displayName}}
                                </td>                                
                            </tr>
                        </script>
                    </table>
                    <div class="DTTTFooter">
                        <div class="col-sm-12">
                            <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                                <ul class="pagination">
                                    <li class="prev disabled btnPrevious"><a id="btnPrevious" href="javascript:void(0)">Prev</a></li>
                                    <li class="next btnNext"><a href="javascript:void(0)" id="btnNext">Next</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8 col-sm-12 col-xs-12" style="padding: 0;">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-themeprimary">
                <i class="widget-icon fa fa-tasks themeprimary"></i>
                <span class="widget-caption themeprimary">Map địa điểm</span>
                <div class="widget-buttons">
                    <a href="javascript:void(0);" id="btnPreviewListLocaltion">
                        <i class="fa fa-list"></i>
                    </a>
                    <a href="javascript:void(0);" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
            </div>
            <div id="widget-body-map" class="widget-body no-padding">
                <div class="task-container">
                    <a href="javascript:void(0);" id="btnAddLocaltionByUser" class="btn btn-info btn-sm">
                        <i class="fa fa-save"></i> Thêm địa điểm cho tài khoản này
                    </a>
                    <div id="maps"></div>
                    @*<div id="panorama"></div>*@
                    <div id="previewListLocaltion" style="display: none">
                        <span class="input-icon icon-right" style="width: 50%;">
                            <input type="text" id="txtSearchLocaltion" name="txtSearchLocaltion" class="form-control" placeholder="Tìm kiếm...">
                            <i class="glyphicon glyphicon-search circular"></i>
                        </span>                  
                        <table class="table table-striped table-hover table-bordered">
                            <tbody id="listAllLocaltion"></tbody>
                            <script id="package-data-localtion" type="x-tmpl-mustache">
                                <tr>
                                    <td>
                                        {{stt}}
                                    </td>
                                    <td>
                                        {{name}}
                                    </td>
                                    <td>
                                        {{address}}
                                    </td>
                                    <td>
                                        {{phone}}
                                    </td>                                                                           
                                    <td style="text-align:center;">                                            
                                        <a href="javascript:void(0)" class="btn btn-danger btn-xs delete" data-id="{{id}}"><i class="fa fa-trash-o"></i> Loại bỏ</a>
                                    </td>
                                </tr>
                            </script>
                        </table>
                        <div class="DTTTFooter">
                            <div class="col-sm-12">
                                <div class="dataTables_paginate paging_bootstrap hide" id="pagerLocaltion">
                                    <ul class="pagination">
                                        <li class="prev disabled btnPreviousLocaltion"><a id="btnPreviousLocaltion" href="javascript:void(0)">Prev</a></li>
                                        <li class="next btnNextLocaltion"><a href="javascript:void(0)" id="btnNextLocaltion">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModalLocaltion" style="display:none;">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="To" required="">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Subject" required="">
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Content" rows="5" required=""></textarea>
            </div>
        </div>
    </div>
</div>
@section PageScripts {
    @Scripts.Render("~/bundles/bootbox")
}
@section FooterScripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmq0TgF9KyKcZSOS0ErMSA7nBlNI8nweI&callback=CmsShop.Home.InitMap" async defer></script>
}
