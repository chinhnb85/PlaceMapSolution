<style>
    #maps {
        height: 100%;
        min-height: 600px;
      }
    #panorama {
        height: 100%;
        min-height: 600px;
      }
</style>

<div class="row">
    <div class="col-lg-4 col-sm-12 col-xs-12" style="padding: 0; padding-right: 5px;">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-themeprimary">
                <i class="widget-icon fa fa-tasks themeprimary"></i>
                <span class="widget-caption themeprimary">Chọn tài khoản</span>
                <span class="input-icon icon-right">
                    <input type="text" id="txtSearch" name="txtSearch" class="form-control" placeholder="Tìm kiếm..." />
                    <i class="glyphicon glyphicon-search circular"></i>
                </span>
            </div>
            <div id="widget-body-user" class="widget-body no-padding">
                <div class="task-container">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th id="nameid">
                                Tên
                            </th>
                        </tr>
                        </thead>
                        <tbody id="listAllAccount"></tbody>
                        <script id="package-data" type="x-tmpl-mustache">
                            <tr {{id}}>
                                <td>
                                    {{stt}}
                                </td>
                                <td>
                                    {{displayName}}
                                </td>                                
                            </tr>
                        </script>
                    </table>
                    <div class="DTTTFooter">                        
                        <div class="col-sm-12">
                            <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                                <ul class="pagination">
                                    <li class="prev disabled btnPrevious"><a id="btnPrevious" href="javascript:void(0)">Prev</a></li>
                                    <li class="next btnNext"><a href="javascript:void(0)" id="btnNext">Next</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8 col-sm-12 col-xs-12" style="padding: 0;">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-themesecondary">
                <i class="widget-icon fa fa-tasks themesecondary"></i>
                <span class="widget-caption themesecondary">Map xem địa điểm</span>
                <div class="widget-buttons">
                    <a href="javascript:void();" id="btnPreviewListLocaltion">
                        <i class="fa fa-list"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
            </div>
            <div id="widget-body-map" class="widget-body no-padding">
                <div class="task-container">
                    <div id="maps" style="display:none"></div>
                    @*<div id="panorama"></div>*@
                    <div id="previewListLocaltion">
                        <fieldset class="fieldset">
                            <legend class="legend">Bộ lọc</legend>
                            <div class="row">
                                <div class="col-sm-6">
                                    <span class="input-icon icon-right">
                                        <input type="text" id="keySearch" name="keySearch" class="form-control" placeholder="Tìm kiếm...">
                                        <i class="glyphicon glyphicon-search circular"></i>
                                    </span>
                                </div>
                            </div>
                        </fieldset>
                        <div class="dataTables_wrapper form-inline no-footer">
                            <table class="table table-striped table-hover table-bordered">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 10%">
                                            Stt
                                        </th>
                                        <th>
                                            Tên địa điểm
                                        </th>
                                        <th>
                                            Địa chỉ
                                        </th>
                                        <th>
                                            Điện thoại
                                        </th>
                                        <th>
                                            Ngày tạo
                                        </th>                                       
                                        <th style="width: 14%">
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="listAllLocaltion"></tbody>
                                <script id="package-data-localtion" type="x-tmpl-mustache">
                                    <tr>
                                        <td>
                                            {{stt}}
                                        </td>
                                        <td>
                                            {{name}}
                                        </td>
                                        <td>
                                            {{address}}
                                        </td>
                                        <td>
                                            {{phone}}
                                        </td>
                                        <td>
                                            {{createdDate}}
                                        </td>                                        
                                        <td style="text-align:center;">                                            
                                            <a href="javascript:void(0)" class="btn btn-danger btn-xs delete" data-id="{{id}}"><i class="fa fa-trash-o"></i> Loại bỏ</a>
                                        </td>
                                    </tr>
                                </script>
                            </table>
                            <div class="DTTTFooter">
                                <div class="col-sm-6">
                                    <select class="form-control input-sm" id="sltPageSize" style="width: 60px; height: 34px; margin-bottom: 5px;">
                                        <option value="10">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                                        <ul class="pagination">
                                            <li class="prev disabled btnPrevious"><a id="btnPreviousLocalyion" href="javascript:void(0)">Prev</a></li>
                                            <li class="next btnNext"><a href="javascript:void(0)" id="btnNextLocaltion">Next</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section FooterScripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmq0TgF9KyKcZSOS0ErMSA7nBlNI8nweI&callback=CmsShop.Home.InitMap" async defer></script>
}
