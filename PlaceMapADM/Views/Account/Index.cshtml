@{
    ViewBag.Title = "Quản lý tài khoản";
}

<div class="row">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Quản lý tài khoản</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>                
            </div>
        </div>
        <div class="widget-body">            
            <form role="form" id="insert-account" action="/Account/Add">
                <fieldset class="fieldset">
                    <legend class="legend">Thêm mới tài khoản</legend>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtUserName" name="txtUserName" class="form-control" placeholder="Tên đăng nhập">
                                    <i class="glyphicon glyphicon-user circular"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDisplayName" name="txtDisplayName" class="form-control" placeholder="Tên hiển thị">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="password" id="txtPassword" name="txtPassword" class="form-control" placeholder="Mật khẩu">
                                    <i class="glyphicon glyphicon-user circular"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtEmail" name="txtEmail" class="form-control" placeholder="Email">
                                    <i class="fa fa-envelope-o circular"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtPhone" name="txtPhone" class="form-control" placeholder="Phone">
                                    <i class="glyphicon glyphicon-earphone"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtBirthDay" name="txtBirthDay" class="form-control" placeholder="Ngày sinh">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" class="form-control" id="txtAddress" name="txtAddress" placeholder="Địa chỉ">
                                    <i class="glyphicon glyphicon-briefcase"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="cbxStatus" name="cbxStatus" class="colored-blue">
                                        <span class="text">Kính hoạt</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <a id="btnAddNewAccount" class="btn btn-info"><i class="fa fa-save"></i> Lưu</a>
                                <a id="btnCancel" class="btn btn-default"><i class="fa fa-recycle"></i> Hủy bỏ</a>
                            </div>
                        </div>
                    </div>                                                            
                </fieldset>                    
            </form>
            <div class="dataTables_wrapper form-inline no-footer">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr role="row">
                            <th style="width:10%">
                                Id
                            </th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                DeviceMobile
                            </th>
                            <th>
                                Time
                            </th>
                            <th style="width:15%">
                            </th>
                        </tr>
                    </thead>
                    <tbody id="listAllAccount"></tbody>
                    <script id="package-data" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{id}}
                            </td>
                            <td>
                                {{displayName}}
                            </td>
                            <td>
                                {{userName}}
                            </td>
                            <td>
                                {{email}}
                            </td>
                            <td>
                                {{deviceMobile}}
                            </td>
                            <td>
                                {{createdDate}}
                            </td>
                            <td>
                                <a href="#" class="btn btn-info btn-xs edit" data-id="{{id}}"><i class="fa fa-edit"></i> Sửa</a>
                                <a href="#" class="btn btn-danger btn-xs delete" data-id="{{id}}"><i class="fa fa-trash-o"></i> Xóa</a>
                            </td>
                        </tr>
                    </script>
                </table>
                <div class="DTTTFooter">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                            <ul class="pagination">
                                <li class="prev disabled btnPrevious"><a id="btnPrevious" href="javascript:void(0)">Prev</a></li>
                                <li class="next btnNext"><a href="javascript:void(0)" id="btnNext">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>        
        </div>
    </div>
</div>

