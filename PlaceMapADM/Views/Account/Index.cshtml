@{
    ViewBag.Title = "Quản lý tài khoản";
}

<div class="row">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Quản lý tài khoản</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>                
            </div>
        </div>
        <div class="widget-body">            
            <form role="form">
                <fieldset class="fieldset">
                    <legend class="legend">Thêm mới tài khoản</legend>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtUserName" class="form-control" placeholder="Tên đăng nhập">
                                    <i class="glyphicon glyphicon-user circular"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDisplayName" class="form-control" placeholder="Tên hiển thị">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtPassword" class="form-control" placeholder="Mật khẩu">
                                    <i class="glyphicon glyphicon-user circular"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtEmail" class="form-control" placeholder="Email">
                                    <i class="fa fa-envelope-o circular"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtPhone" class="form-control" placeholder="Phone">
                                    <i class="glyphicon glyphicon-earphone"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtBirthDay" class="form-control" placeholder="Ngày sinh">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <input type="text" class="form-control" id="txtAddress" placeholder="Địa chỉ">
                                    <i class="glyphicon glyphicon-briefcase"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="cbxStatus" class="colored-blue">
                                        <span class="text">Kính hoạt</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>                                        
                    <a id="btnAddNewAccount" class="btn btn-info"><i class="fa fa-plus"></i> Thêm mới</a>                    
                </fieldset>                    
            </form>            
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr role="row">
                        <th style="width:10%">
                            Id
                        </th>
                        <th>
                            Tên
                        </th>
                        <th>
                            Username
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            DeviceMobile
                        </th>
                        <th>
                            Time
                        </th>
                        <th style="width:15%">
                        </th>
                    </tr>
                </thead>
                <tbody id="listAllAccount">                    
                </tbody>
            </table>
        </div>
    </div>
</div>

