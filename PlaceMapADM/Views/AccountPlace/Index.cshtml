
<div class="row">    
    <div class="col-lg-12 col-sm-12 col-xs-12" style="padding: 0;">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-themeprimary">
                <i class="widget-icon fa fa-tasks themeprimary"></i>
                <span class="widget-caption themeprimary">Xem lịch sử tài khoản </span>
                <div class="widget-buttons">
                    <a href="javascript:void(0);" id="btnPreviewListAccountPlace">
                        <i class="fa fa-list"></i>
                    </a>                   
                    <a class="sidebar-toggler" href="javascript:void(0);">
                        <i class="fa fa-arrows-h"></i>
                    </a>
                    <a href="javascript:void(0);" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
            </div>
            <div id="widget-body-map" class="widget-body no-padding">
                <div class="task-container">
                    <fieldset class="fieldset" style="margin-bottom: 0!important;">
                        <legend class="legend">Bộ lọc</legend>
                        <div class="row">
                            <div class="col-sm-4 form-horizontal">
                                <div class="form-group" style="margin-bottom: 0;">
                                    <label class="col-sm-4 control-label no-padding-right">Chọn tài khoản</label>
                                    <div class="col-sm-8">
                                        <select id="sltAccountSearch" name="sltAccountSearch" style="border-radius: 0; width: 100%">
                                            <option value="0">--- Chọn tài khoản ---</option>
                                            <script id="data-list-account" type="x-tmpl-mustache">
                                                <option value="{{id}}">{{name}}</option>
                                            </script>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <span class="input-icon icon-right">
                                        <input type="text" id="txtDatetimeSearch" name="txtDatetimeSearch" class="form-control" placeholder="Chọn ngày xem">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>                           
                        </div>
                    </fieldset>
                    <div id="maps"></div>                    
                    <div id="previewListAccountPlace" style="display: none">
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr role="row">
                                    <th style="width: 10%">
                                        Stt
                                    </th>
                                    <th>
                                        Vị trí kinh độ
                                    </th>
                                    <th>
                                        Vị trí vĩ độ
                                    </th>
                                    <th>
                                        Thời gian
                                    </th>                                    
                                </tr>
                            </thead>
                            <tbody id="listAllAccountPlace"></tbody>
                            <script id="package-data-localtion" type="x-tmpl-mustache">
                                <tr>
                                    <td style="width:5%">
                                        {{stt}}
                                    </td>
                                    <td>
                                        {{lag}}
                                    </td>
                                    <td>
                                        {{lng}}
                                    </td>
                                    <td>
                                        {{datetime}}
                                    </td>                                                                                                       
                                </tr>
                            </script>
                        </table>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageScripts {
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/datetime")
    @Scripts.Render("~/bundles/select2")
}
@section FooterScripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=@System.Configuration.ConfigurationManager.AppSettings["keymapapi"]&callback=CmsShop.AccountPlace.InitMap"></script>
}
