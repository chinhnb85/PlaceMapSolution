@{
    ViewBag.Title = "Thống kê";
}

<div class="row">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Thống kê</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
            </div>
        </div>
        <div class="widget-body">
            <div class="form-group">                
                <a id="btnExportLocaltion" class="btn btn-info btn-xs pull-right"><i class="fa fa-file-excel-o"></i> Xuất ra Excel</a>
            </div>            
            <fieldset class="fieldset" style="margin-bottom: 0!important;">
                <legend class="legend">Bộ lọc</legend>
                <div class="row">                    
                    <div class="col-sm-4 form-horizontal">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="col-sm-5 control-label no-padding-right">Từ ngày</label>
                            <div class="col-sm-7">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDatetimeStart" name="txtDatetimeStart" class="form-control" placeholder="Từ ngày">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 form-horizontal">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="col-sm-5 control-label no-padding-right">Tới ngày</label>
                            <div class="col-sm-7">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDatetimeEnd" name="txtDatetimeEnd" class="form-control" placeholder="Tới ngày">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <input type="button" value="Xem" id="btnSearch" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>

            <div class="dataTables_wrapper form-inline no-footer">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr role="row">
                            <th style="width: 6%">
                                Stt
                            </th>                                                        
                            <th>
                                Tài khoản
                            </th>
                            <th>
                                Nhân viên
                            </th>
                            <th>
                                Tổng số KH
                            </th>
                            <th>
                                Tổng số checkin/tháng
                            </th>
                            <th>
                                Số KH checkin đủ 3/tháng
                            </th>                            
                        </tr>
                    </thead>
                    <tbody id="listAllStatistic"></tbody>
                    <script id="package-data" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{stt}}
                            </td>                            
                            <td>
                                {{userName}}
                            </td>
                            <td>
                                {{fullName}}
                            </td>                            
                            <td>
                                {{sumAll}}
                            </td> 
                            <td>
                                {{sumCheckInMonth}}
                            </td> 
                            <td>
                                {{fullMinCheckInMonth}}
                            </td>                            
                        </tr>
                    </script>
                </table>
                <div class="DTTTFooter">
                    <div class="col-sm-6">
                        <select class="form-control input-sm" id="sltPageSize" style="width: 60px; height: 34px; margin-bottom: 5px;">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                            <ul class="pagination">
                                <li class="prev disabled btnPrevious"><a id="btnPrevious" href="javascript:void(0)">Prev</a></li>
                                <li class="next btnNext"><a href="javascript:void(0)" id="btnNext">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModalLocaltionDetail" class="modal fade" role="dialog" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chi tiết địa chỉ này</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover table-bordered">
                    <tbody id="viewDetailLocaltion"></tbody>
                    <script id="package-data-viewDetailLocaltion" type="x-tmpl-mustache">
                        <tr>
                            <td style="width:25%">Trạng thái: </td>
                            <td>
                                <input readonly class="colored-success" type="checkbox" {{isChecked}}>
                                <span class="text">{{isCheckedName}}</span>
                                <a href="/AccountChecked/?accountId={{accountId}}" class="btn btn-default btn-xs" style="float:right;"><i class="fa fa-map-marker"></i> Lịch sử tài khoản checkin</a>
                            </td>
                        </tr>
                        <tr>
                            <td>Tên: </td>
                            <td>{{name}}</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ: </td>
                            <td>{{address}}</td>
                        </tr>
                        <tr>
                            <td>Ảnh: </td>
                            <td><a class="example-image-link" href="{{avatar}}" data-lightbox="example-1"><img src='{{avatar}}' width="64" /></a></td>
                        </tr>
                        <tr>
                            <td>Kinh, Vĩ độ: </td>
                            <td>{{lag}}, {{lng}}</td>
                        </tr>
                        <tr>
                            <td>Phone: </td>
                            <td>{{phone}}</td>
                        </tr>
                        <tr>
                            <td>Email: </td>
                            <td>{{email}}</td>
                        </tr>
                        <tr>
                            <td>Loại khách hàng: </td>
                            <td>{{customeType}}</td>
                        </tr>
                        <tr>
                            <td>Mã khách hàng: </td>
                            <td>{{code}}</td>
                        </tr>
                        <tr>
                            <td>Người đại diện: </td>
                            <td>{{representActive}}</td>
                        </tr>
                        <tr>
                            <td>Số lần checkin trong tháng: </td>
                            <td>{{minCheckin}}</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <a href="/?accountId={{accountId}}&lag={{lag}}&lng={{lng}}" class="btn btn-primary btn-xs"><i class="fa fa-map-marker"></i>View Map</a>
                                <a href="/LocaltionCheckin/?localtionId={{id}}" class="btn btn-default btn-xs" style="float:right;"><i class="fa fa-map-marker"></i> Lịch sử checkin địa điểm</a>
                            </td>
                        </tr>
                    </script>
                </table>
            </div>
        </div>
    </div>
</div>
@section PageScripts {   
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/lightbox2") 
}

