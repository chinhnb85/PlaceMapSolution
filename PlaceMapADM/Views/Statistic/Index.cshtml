@{
    ViewBag.Title = "Thống kê";
}

<div class="row">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Thống kê</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
            </div>
        </div>
        <div class="widget-body">                      
            <fieldset class="fieldset" style="margin-bottom: 0!important;">
                <legend class="legend">Bộ lọc</legend>
                <div class="row">                    
                    <div class="col-sm-4 form-horizontal">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="col-sm-5 control-label no-padding-right">Từ ngày</label>
                            <div class="col-sm-7">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDatetimeStart" name="txtDatetimeStart" class="form-control" placeholder="Từ ngày">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 form-horizontal">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="col-sm-5 control-label no-padding-right">Tới ngày</label>
                            <div class="col-sm-7">
                                <span class="input-icon icon-right">
                                    <input type="text" id="txtDatetimeEnd" name="txtDatetimeEnd" class="form-control" placeholder="Tới ngày">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <input type="button" value="Xem" id="btnSearch" class="btn btn-primary"/>
                    </div>
                    <div class="col-sm-2">
                        <a id="btnExportStatistic" class="btn btn-info btn-xs pull-right"><i class="fa fa-file-excel-o"></i> Xuất ra Excel</a>
                    </div>
                </div>
            </fieldset>

            <div class="dataTables_wrapper form-inline no-footer">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr role="row">
                            <th style="width: 6%">
                                Stt
                            </th>                                                        
                            <th>
                                Tài khoản
                            </th>
                            <th>
                                Nhân viên
                            </th>
                            <th>
                                Tổng số KH
                            </th>
                            <th>
                                Tổng số checkin/tháng
                            </th>
                            <th>
                                Số KH checkin đủ 3/tháng
                            </th>                            
                        </tr>
                    </thead>
                    <tbody id="listAllStatistic"></tbody>
                    <script id="package-data" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                {{stt}}
                            </td>                            
                            <td>
                                {{userName}}
                            </td>
                            <td>
                                {{fullName}}
                            </td>                            
                            <td>
                                {{sumAll}}
                            </td> 
                            <td>
                                {{sumCheckInMonth}}
                            </td> 
                            <td>
                                {{fullMinCheckInMonth}}
                            </td>                            
                        </tr>
                    </script>
                </table>
                <div class="DTTTFooter">
                    <div class="col-sm-6">
                        <select class="form-control input-sm" id="sltPageSize" style="width: 60px; height: 34px; margin-bottom: 5px;">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_bootstrap hide" id="pager">
                            <ul class="pagination">
                                <li class="prev disabled btnPrevious"><a id="btnPrevious" href="javascript:void(0)">Prev</a></li>
                                <li class="next btnNext"><a href="javascript:void(0)" id="btnNext">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageScripts {
    @Scripts.Render("~/bundles/datetime")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/lightbox2") 
}

