@{
    ViewBag.Title = "Thêm mới sản phẩm";
}

<div class="row">
    <div class="widget">
        <div class="widget-header ">
            <span class="widget-caption">Sản phẩm mới</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
            </div>
        </div>
        <div class="widget-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <a id="btnAdd" class="btn btn-info"><i class="fa fa-plus"></i> Thêm</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Chọn danh mục: </label>
                        </div>
                        <div class="col-sm-4">
                            <select id="sltCategory" class="form-control" style="border-radius: 0;">
                                <option value="0">Danh mục</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label>
                                <input type="checkbox" class="colored-blue" id="txtIsHighlights">
                                <span class="text">Sản phẩm bán chạy</span>
                            </label>
                        </div>                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Tên sản phẩm: </label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" class="form-control input-sm" id="txtName" placeholder="Tên sản phẩm">
                        </div> 
                        <div class="col-sm-4">
                            <label>
                                <input type="checkbox" class="colored-blue" id="txtIsTop">
                                <span class="text">Sản phẩm Top</span>
                            </label>
                        </div>                       
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Avatar: </label>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" class="form-control input-sm" id="txtAvatar" placeholder="Tên sản phẩm">
                        </div>                        
                        <div class="col-sm-4">
                            <a id="btnBrowse" class="btn btn-default">Browse</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Giá: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="txtPrice" placeholder="Giá">
                        </div>
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Giá khuyến mại: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="txtPriceKm" placeholder="Giá khuyến mại">
                        </div>
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Hãng sản xuất: </label>
                        </div>
                        <div class="col-sm-2">
                            <select id="sltManufacturer" class="form-control" style="border-radius: 0;">
                                <option value="0">Hãng sản xuất</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Trạng thái: </label>
                        </div>
                        <div class="col-sm-2">
                            <select id="sltCondition" class="form-control" style="border-radius: 0;">
                                <option value="0">Trạng thái</option>
                                <option value="1">Còn hàng</option>
                                <option value="2">Hết hàng</option>
                            </select>
                        </div>
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Trọng lượng: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="txtWeigh" placeholder="Trọng lượng">
                        </div>
                        <div class="col-sm-2 control-label no-padding-right">
                            <label>Xuất xứ: </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="txtOrigin" placeholder="Xuất xứ">
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class="active">
                                <a data-toggle="tab" href="#descriptiontab" aria-expanded="true">
                                    Mô tả sản phẩm
                                </a>
                            </li>
                            <li class="tab-red">
                                <a data-toggle="tab" href="#videotab" aria-expanded="false">
                                    Video
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div id="descriptiontab" class="tab-pane active">
                                <div class="widget-main no-padding">
                                    <div id="summernoteDescription"></div>
                                </div>
                            </div>
                            <div id="videotab" class="tab-pane">
                                <div class="widget-main no-padding">
                                    <div id="summernoteVideo"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <a id="btnAdd" class="btn btn-info"><i class="fa fa-plus"></i> Thêm</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
